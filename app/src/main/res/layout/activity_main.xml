<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="com.gmail.brianbridge.rxjavaglobalthrottlefirstoperator.MainActivity">

	<TextView
		android:id="@+id/textView_intro"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/intro" />

	<View
		android:id="@+id/view_introDivider"
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_below="@+id/textView_intro"
		android:background="@android:color/background_dark" />

	<TextView
		android:id="@+id/textView_log"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/btn_send_a"
		android:layout_below="@+id/view_introDivider"
		android:scrollbars="vertical"
		android:layout_marginTop="8dp"
		android:text="Log:\n" />

	<Button
		android:id="@+id/btn_send_a"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/btn_send_b"
		android:layout_marginTop="8dp"
		android:text="@string/btn_send_a_stringFormat"
		android:textAllCaps="false" />
	<Button
		android:id="@+id/btn_send_b"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_marginTop="8dp"
		android:text="@string/btn_send_b_stringFormat"
		android:textAllCaps="false" />
</RelativeLayout>
